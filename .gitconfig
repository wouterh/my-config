[hub]
	protocol = https
[user]
	name = Wouter Horr√©
[credential]
	helper = cache
[alias]
	aa = add --all
	co = checkout
	ci = commit -v
	branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
	count   = !git shortlog -sn
	lg      = !git log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	ls = ls-tree -r --full-tree HEAD
	st = status
	hide = update-index --skip-worktree
	unhide = update-index --no-skip-worktree
	unhide-all = !git ls-files -v | grep -i '^S' | cut -c3- | xargs git update-index --no-skip-worktree
	hidden = !git ls-files -v | grep '^S' | cut -c3-
[apply]
	whitespace = nowarn
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[core]
	editor = vim
	ignorecase = false
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = blue bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[difftool]
	prompt = false
[diff]
	colorMoved = zebra
[fetch]
	prune = true
[help]
	autocorrect = 1
[mergetool]
	keepBackup = false
[push]
	# See `git help config` (search for push.default)
	# for more information on different options of the below setting.
	#
	# Setting to git 2.0 default to surpress warning message
	default = simple
[rebase]
	autosquash = true
[merge]
	conflictstyle = diff3
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[include]
	path = ~/.gitconfig.local
[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/
[pull]
	ff = only
